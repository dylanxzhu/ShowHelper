<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HorizontalLineTheme">
        <item name="android:background">@color/color_a8a8a8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="VerticalLineTheme">
        <item name="android:background">@color/color_a8a8a8</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FragmentTabTxtTheme" parent="TextViewTheme">
        <item name="android:textColor">@drawable/tab_txt_color</item>
    </style>
</resources>
