<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/show_name_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="测试" />

    <EditText
        android:id="@+id/latest_season_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="1" />

    <EditText
        android:id="@+id/total_episodes_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="10" />

    <EditText
        android:id="@+id/updated_episode_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="1" />

    <Spinner
        android:id="@+id/updatedWeek_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/updated_week" />

    <EditText
        android:id="@+id/updated_time_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="time"
        android:text="12:00" />

    <EditText
        android:id="@+id/updated_date_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="date"
        android:text="2016-07-30" />

    <EditText
        android:id="@+id/next_date_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="date"
        android:text="2016-08-06" />

    <Spinner
        android:id="@+id/showRegion_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/show_region" />

    <Spinner
        android:id="@+id/showType_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/show_type" />

    <Spinner
        android:id="@+id/showStatus_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/show_status" />

    <Button
        android:id="@+id/show_add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加" />

</LinearLayout>